{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Node",
    "declaration": true,
    "strict": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "checkJs": false,
    "typeRoots": ["./types", "./node_modules/@types"]
  }
}
